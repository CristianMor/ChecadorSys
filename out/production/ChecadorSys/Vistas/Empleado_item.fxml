<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="945.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.EmpleadoitemControll">
   <children>
      <Label fx:id="lblId" alignment="CENTER" prefHeight="50.0" prefWidth="80.0" text="P-23">
         <font>
            <Font name="Ubuntu Light" size="16.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
      <Pane prefHeight="70.0" prefWidth="100.0">
         <children>
            <ImageView fx:id="imgView" fitHeight="60.0" fitWidth="60.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../imgs/profileFoto.jpeg" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Label fx:id="lblNombre" prefHeight="50.0" prefWidth="150.0" text="Valeria Aellen">
         <font>
            <Font name="Ubuntu Light" size="16.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Label>
      <Label fx:id="lblApPaterno" prefHeight="50.0" prefWidth="170.0" text="Moreno">
         <font>
            <Font name="Ubuntu Light" size="16.0" />
         </font>
      </Label>
      <Label fx:id="lblPuesto" prefHeight="50.0" prefWidth="140.0" text="Steward">
         <font>
            <Font name="Ubuntu Light" size="16.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="220.0" spacing="20.0">
         <children>
            <Button fx:id="btnVer" mnemonicParsing="false" onAction="#eventAction" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #E79A58; -fx-background-radius: 50px;">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imgs/ver32-white.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#eventAction" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #E35AE7; -fx-background-radius: 50;">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imgs/userEdit32-white.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eventAction" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #2c2b3b; -fx-background-radius: 50;">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imgs/userDel32-white.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
